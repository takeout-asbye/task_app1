<div class="container-fiuld user">
  <div>
    <%= render "shared/partial" %>
    <div class="col-md user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>
              プロフィール
            </h5>
          </div>
        </div>
        <%= form_with model:@user, local:true do |f| %>
          <div class="update-content">
            <div class="row">
              <div class="col-6">
                <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %>
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :profile_image, "アイコン画像", class:"col-md" %>
              <%= f.file_field :profile_image %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :username, "名前", class:"col-md" %>
              <%= f.text_field :username, class:"form-control" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :profile, "自己紹介", class:"col-md" %>
              <%= f.text_area :profile, class:"form-control" %>
            </div>
          </div>
          <div class="update-content">
            <div>
              <%= f.submit "更新", class:"btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'users/profile.js' %>
