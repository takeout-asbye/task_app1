<div class="container-fiuld room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @hotels.each do |hotel| %>
        <tr aling="center">
          <td><%= link_to (attachment_image_tag hotel, :image, fallback: "no-image.png", class: "room-posts-image"), hotel_path(hotel) %></td>
          <td class="posts-name"><%= link_to hotel.name, hotel_path(hotel) %></td>
          <td class="posts-content"><%= hotel.introduction %></td>
          <td class="price-icon"><%= hotel.price %></td>
          <td><%= hotel.created_at.to_s(:datetime_jp) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
